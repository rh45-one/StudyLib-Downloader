{
  "manifest_version": 3,
  "name": "StudyLib Downloader",
  "version": "1.0.1",
  "description": "Download documents from StudyLib easily",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://*.studylib.net/*",
    "https://*.studylib.com/*",
    "https://*.studylib.es/*", 
    "https://*.studylib.fr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.studylib.net/*",
        "https://*.studylib.com/*",
        "https://*.studylib.es/*", 
        "https://*.studylib.fr/*"
      ],
      "js": ["content.js"]
    }
  ]
}